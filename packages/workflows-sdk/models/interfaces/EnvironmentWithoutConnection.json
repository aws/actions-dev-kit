{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/interface/Environment/2",
  "type": "object",
  "title": "EnvironmentWithoutConnection",
  "description": "The location to the code is run in, or deployed to, depending on the action type. This version of environment does not require a connection",
  "properties": {
    "Name": {
      "type": "string",
      "description": "Name of the environment",
      "minLength": 1,
      "maxLength": 2500
    },
    "Connections": {
      "type": "array",
      "items": {
        "type": "object",
        "description": "Connection associated with the Environment",
        "properties": {
          "Name": {
            "type": "string",
            "pattern": "^[A-Za-z0-9\\-_]+$",
            "minLength": 3,
            "maxLength": 63
          },
          "Role": {
            "type": "string",
            "pattern": "^[A-Za-z0-9_+=,.@-]+$",
            "minLength": 1,
            "maxLength": 64
          }
        },
        "required": ["Name", "Role"]
      },
      "minItems": 1,
      "maxItems": 1
    }
  },
  "required": ["Name"]
}
