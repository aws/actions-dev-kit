{
  "name": "@aws/codecatalyst-adk",
  "description": "ADK CLI",
  "bin": {
    "adk": "bin/adk"
  },
  "scripts": {
    "build": "npx projen build",
    "bump": "npx projen bump",
    "clobber": "npx projen clobber",
    "compile": "npx projen compile",
    "default": "npx projen default",
    "eject": "npx projen eject",
    "eslint": "npx projen eslint",
    "package": "npx projen package",
    "post-compile": "npx projen post-compile",
    "post-upgrade": "npx projen post-upgrade",
    "pre-compile": "npx projen pre-compile",
    "test": "npx projen test",
    "test:watch": "npx projen test:watch",
    "unbump": "npx projen unbump",
    "upgrade": "npx projen upgrade",
    "watch": "npx projen watch",
    "projen": "npx projen --no-post",
    "component:package": "yarn build && yarn package",
    "npm:push": "yarn bump && yarn component:package && yarn npm:publish",
    "npm:publish": "npm publish dist/js/*.tgz"
  },
  "devDependencies": {
    "@aws/adk-typescript-construct": "*",
    "@types/jest": "*",
    "@types/node": "^18",
    "@typescript-eslint/eslint-plugin": "^5",
    "@typescript-eslint/parser": "^5",
    "eslint": "^8",
    "eslint-import-resolver-node": "*",
    "eslint-import-resolver-typescript": "*",
    "eslint-plugin-import": "*",
    "jest": "*",
    "jest-junit": "^15",
    "npm-check-updates": "^16",
    "projen": "*",
    "reflect-metadata": "^0.1.3",
    "standard-version": "^9",
    "ts-jest": "*",
    "ts-node": "*",
    "typescript": "*"
  },
  "dependencies": {
    "@aws/codecatalyst-adk-model-parser": "*",
    "@aws/codecatalyst-adk-utils": "*",
    "@nestjs/common": "^10.0.0",
    "@nestjs/core": "^10.0.3",
    "chalk": "^4",
    "js-yaml": "^4.0.5",
    "jsonschema": "1.4.0",
    "rxjs": "^7.8.0",
    "yargs": "^17.7.1"
  },
  "main": "lib/index.js",
  "license": "Apache-2.0",
  "version": "1.0.17",
  "jest": {
    "coverageThreshold": {
      "global": {
        "statements": 47,
        "branches": 40,
        "functions": 50,
        "lines": 53
      }
    },
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.ts?(x)",
      "<rootDir>/(test|src)/**/*(*.)@(spec|test).ts?(x)"
    ],
    "clearMocks": true,
    "collectCoverage": true,
    "coverageReporters": [
      "json",
      "lcov",
      "clover",
      "cobertura",
      "text"
    ],
    "coverageDirectory": "coverage",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "watchPathIgnorePatterns": [
      "/node_modules/"
    ],
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test-reports"
        }
      ]
    ],
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.dev.json"
      }
    }
  },
  "types": "lib/index.d.ts",
  "preferGlobal": true,
  "//": "~~ Generated by projen. To modify, edit .projenrc.ts and run \"npx projen\"."
}
